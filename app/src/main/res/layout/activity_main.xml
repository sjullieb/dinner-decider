<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Chinese"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/foodNametxt" android:fontFamily="@font/muli_bold" android:textSize="30sp"
            android:layout_marginTop="180dp"/>
    <Button
            android:text="DECIDE!"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/decideBtn"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            style="@style/Widget.AppCompat.Button.Borderless" app:layout_constraintHorizontal_bias="0.0"
            android:textSize="24sp" android:fontFamily="@font/muli_bold" android:background="@color/colorPrimary"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:ems="10"
            android:id="@+id/foodEditTxt"
            android:fontFamily="@font/muli_bold" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:hint="add new food..." android:layout_marginBottom="12dp"
            app:layout_constraintBottom_toTopOf="@+id/addFoodBtn"/>
    <Button
            android:text="ADD FOOD"
            android:layout_width="226dp"
            android:layout_height="0dp"
            android:id="@+id/addFoodBtn"
            style="@style/Widget.AppCompat.Button.Borderless" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="64dp"
            app:layout_constraintBottom_toTopOf="@+id/decideBtn" android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp" android:background="@color/colorPrimary"/>

</android.support.constraint.ConstraintLayout>